{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../build"
  },
  "package": {
    "productName": "bymr-launcher",
    "version": "0.2.3"
  },
  "tauri": {
    "allowlist": {
      "process": {
        "exit": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://localhost/*", "https://api.bymrefitted.com/*"]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.bymr.launcher",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "windows": {
        "installMode": "passive"
      },
      "active": true,
      "endpoints": [
        "https://gist.github.com/React1-X/30d54091783e2434d697e557606ed70a/raw"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJBQzY1N0EzQzJCRUNBQzkKUldUSnlyN0NvMWZHdXB3dml4WGNvdHdRZVZraWpkVks0UVhHVTZvMlkvSjBlZlRQOGd1RVMxRk0K"
    },
    "windows": [
      {
        "title": "Backyard Monsters: Refitted | Launcher",
        "fullscreen": false,
        "resizable": true,
        "maximized": true,
        "minWidth": 1000,
        "minHeight": 600,
        "decorations": false
      }
    ]
  }
}
